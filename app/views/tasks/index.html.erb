<h1>Tasks</h1>

<ul>
  <% @tasks.each do |task| %>
    <li>
      <% if task.completed? %>
        <i class="fa-regular fa-square-check"></i>
      <% else %>
        <i class="fa-regular fa-square"></i>
      <% end %>
      <%= link_to task.title, task_path(task.id) %>
      <%= task.details %> | completed: <%= task.completed %>
      <%= link_to task_path(task), data: {turbo_method: :delete,
        turbo_confirm: "Are you sure?"} do %>
        <i class="fa-solid fa-trash"></i>
      <% end %>
      <hr>
    <% end %>
    </li>
</ul>
